<script>
    $(document).on('click', '#empty-cart', function(e) {
        e.preventDefault();
        var url = $(this).attr('href');
        var itemCount = $('#item-count');
        $.ajax({
            url: url,
            type: 'get',
            success: function() {
                itemCount.html(0);
                if (window.location.href.indexOf('display-my-cart') > -1) {
                    window.location = '{{ path('homepage') }}';
                }
            }
        });
    });
</script>